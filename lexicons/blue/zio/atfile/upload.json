{
  "lexicon": 1,
  "id": "blue.zio.atfile.upload",
  "defs": {
    "checksum": {
      "type": "object",
      "description": "Checksum info for a blob",
      "properties": {
        "algo": { "type": "string" },
        "hash": { "type": "string" }
      }
    },
    "file": {
      "type": "object",
      "description": "File metadata for an uploaded blob",
      "properties": {
        "mimeType": { "type": "string" },
        "modifiedAt": { "type": "string", "format": "datetime" },
        "name": { "type": "string" },
        "size": { "type": "integer" }
      }
    },
    "main": {
      "type": "record",
      "description": "A reference to an uploaded blob.",
      "key": "any",
      "record": {
        "type": "object",
        "properties": {
          "blob": {
            "type": "blob",
            "accept": ["*/*"],
            "maxSize": 1000000000000
          },
          "checksum": {
            "type": "ref",
            "ref": "blue.zio.atfile.upload#checksum"
          },
          "createdAt": { "type": "string", "format": "datetime" },
          "file": { "type": "ref", "ref": "blue.zio.atfile.upload#file" },
          "finger": {
            "type": "union",
            "refs": [
              "blue.zio.atfile.finger#browser",
              "blue.zio.atfile.finger#machine"
            ],
            "closed": false
          },
          "meta": {
            "type": "union",
            "refs": ["blue.zio.atfile.meta#unknown"],
            "closed": false
          }
        }
      }
    }
  }
}
